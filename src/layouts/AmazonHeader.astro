---
import ButtonGradient from "../components/ButtonGradient.astro";
---

<header id="header" class="sticky-menu w-full">
  <nav class="w-full sm:w-[95%] mx-auto items-center bg-amazon-gray bg-opacity-30 px-5 rounded-b-2xl">
    <div class="w-full flex my-auto gap-5 justify-between py-1">
      <div id="desplegable-menu" class="flex h-full gap-3 lg:hidden">
        <p>Menú</p>
        <img src="/images/icons/arrow_icon.svg" alt="" />
      </div>
      <div class="flex h-full gap-8">
        <div id="logo-desktop" class="flex h-full">
          <img src='/images/logo-primevideo.png' alt="Logo Prime Video" />
        </div>
        <div id="menu" class="h-full gap-8 hidden lg:flex">
          <ButtonGradient textButton="Inicio" linkProject="" />
          <a href="">Películas</a>
          <a href="">Series</a>
          <a href="">Deportes</a>
          <a href="">TV en directo</a>
          <p>|</p>
          <img src="/images/prime_mark.png" alt="" />
          <div class="flex gap-2">
            <img src="/images/icons/suscription_icon.svg" alt="" />
            <p>Suscripciones</p>
          </div>
        </div>
      </div>
      <div class="flex h-full gap-8">
        <img src="/images/icons/magnifying-glass_icon.svg" alt="" />
        <div id="options" class="hidden h-full gap-8 lg:flex">
          <img src="/images/icons/bullet-list_icon.svg" alt="" />
          <img src="/images/icons/bookmark_icon.svg" alt="" />
        </div>
        <img src="/images/user_image.png" alt="" />
      </div>
    </div>
  </nav>
</header>

<style>
  #header div {
    min-height: 4rem;
    backdrop-filter: blur(8px);
  }

  .sticky-menu {
    position: fixed;
    top: 0;
    z-index: 100;
  }

  nav div {
    flex-direction: row;
    align-items: center;
  }
</style>

