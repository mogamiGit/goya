---
import { Icon } from 'astro-icon/components';
import ButtonGradient from "../components/ButtonGradient.astro";
import LogoPrimeVideo from '../assets/logo-primevideo.png';
import PrimeMark from '../assets/prime_mark.png';
import UserImage from '../assets/user_image.png';
---

<header id="header" class="sticky-menu w-full">
  <nav class="w-full sm:w-[95%] mx-auto items-center bg-amazon-gray bg-opacity-30 px-5 rounded-b-2xl">
    <div class="w-full flex my-auto gap-5 justify-between py-1">
      <div id="desplegable-menu" class="flex h-full gap-3 lg:hidden">
        <p>Menú</p>
        <Icon name="arrow_icon" width="12"/>
      </div>
      <div class="flex h-full gap-8">
        <div id="logo" class="flex h-full">
          <img src={LogoPrimeVideo.src} alt="Logo Prime Video"/>
        </div>
        <div id="menu" class="h-full gap-8 hidden lg:flex">
          <ButtonGradient textButton="Inicio" linkProject="" />
          <a href="">Películas</a>
          <a href="">Series</a>
          <a href="">Deportes</a>
          <a href="">TV en directo</a>
          <p>|</p>
          <img src={PrimeMark.src} alt="Prime mark"/>
          <div class="flex gap-2">
            <Icon name="suscription_icon" />
            <p>Suscripciones</p>
          </div>
        </div>
      </div>
      <div class="flex h-full gap-8">
        <Icon name="magnifying-glass_icon" />
        <div id="options" class="hidden h-full gap-8 lg:flex">
          <Icon name="bullet-list_icon" />
          <Icon name="bookmark_icon" />
        </div>
        <img src={UserImage.src} alt="Prime mark"/>
      </div>
    </div>
  </nav>
</header>

<style>
  #header div {
    min-height: 4rem;
    backdrop-filter: blur(8px);
  }

  .sticky-menu {
    position: fixed;
    top: 0;
    z-index: 100;
  }

  nav div {
    flex-direction: row;
    align-items: center;
  }
</style>

